
local gayshit = {"sexual", "gay", "pride", "les", "trans", "lgb","binary","demi","neptun","uran","homo","rainbow","gender"}

for _,a in ipairs(workspace:GetChildren()) do
    if a:IsA("Hint") then
        a:Destroy()
    end
end

local thingsremoved = 0

local h = Instance.new("Hint")
h.Parent = workspace
h.Text = tostring(thingsremoved).." objects have been detected as pride bullshit, instantly removed."
warn(tostring(thingsremoved).." objects have been detected as pride bullshit, instantly removed.")

for _,a in pairs(game:GetDescendants()) do
	local name = string.lower(a.Name)
	for key,value in pairs(gayshit) do
	    if string.find(name,value) then
	        if string.find(name,"transparency") then
        	else
    	     	thingsremoved = thingsremoved + 1
    	    	h.Text = tostring(thingsremoved).." objects have been detected as pride bullshit, instantly removed. (slow to prevent lag)"
		if a:IsA("LocalScript") or a:IsA("ModuleScript") then else
			a:Destroy()
		end
    	    	game["Run Service"].Heartbeat:Wait()
    		end
    	end
	end
	
	if a:IsA("StringValue") and string.find(a.Name,"Par") then
	    local name = string.lower(a.Value)
	    for key,value in pairs(gayshit) do
    	    if string.find(name,value) then
    	        if string.find(name,"transparency") then
            	else
            	    if a.Parent == workspace then
            	    else
            	     	thingsremoved = thingsremoved + 1
            	    	h.Text = tostring(thingsremoved).." objects have been detected as pride bullshit, instantly removed. (slow to prevent lag)"
            	    	a.Parent:Destroy()
            	    	game["Run Service"].Heartbeat:Wait()
        	    	end
        		end
        	end
	    end
	end
	
	if a:IsA("TextLabel") or a:IsA("TextBox") or a:IsA("TextButton") then
	   	for key,value in pairs(gayshit) do
    	    local name = string.lower(a.Text)
        	if string.find(name,value) then
        	    if string.find(name,"transparency") then
        	        else
    	    	    thingsremoved = thingsremoved + 1
    	    	    h.Text = tostring(thingsremoved).." objects have been detected as pride bullshit, instantly removed. (slow to prevent lag)"
        		    a.Text = "die, faggot."
        		    game["Run Service"].Heartbeat:Wait()
        		end
        	end
        end
	end
end

game.Debris:AddItem(h,3)

wait(4)
local h = Instance.new("Hint")
h.Parent = workspace
h.Text = "Some game assets may be broken, if any are, Machiavelli_Modder#0453 on discord."
game.Debris:AddItem(h,6)
